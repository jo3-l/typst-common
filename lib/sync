#!/bin/bash

set -e

die() {
	echo "error: $1" >&2
	exit 1
}

lib_dir=(dirname "$0")
cd $lib_dir

[ -d ".git" ] || die "lib/ is not a git repository"

git fetch origin
git merge --squash origin/main || die "merge conflicts detected"

if git diff --cached --quiet; then
	echo "already up to date"
else
	git commit -m "Update lib"
fi
